<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.DataLoadActivity">

    <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints">
                <Button
                        android:id="@+id/choose_file"
                        android:background="@color/colorAccent"
                        android:layout_margin="50px"
                        android:text="选择文件"
                        android:layout_width="250px"
                        android:layout_height="100px"/>

                <Spinner
                        android:id="@+id/file_type"

                        android:spinnerMode="dialog"
                        android:entries="@array/file_type_array"
                        android:background="@color/colorPressed"
                        android:layout_margin="50px"
                        android:layout_width="250px"
                        android:layout_height="100px"/>

                <Spinner
                        android:id="@+id/data_type"

                        android:spinnerMode="dialog"
                        android:entries="@array/data_type_array"
                        android:background="@color/colorPressed"
                        android:layout_margin="50px"
                        android:layout_width="250px"
                        android:layout_height="100px"/>

                <Button
                        android:id="@+id/load_data"
                        android:text="加载数据"
                        android:background="@color/colorAccent"
                        android:layout_margin="50px"
                        android:layout_width="250px"
                        android:layout_height="100px"/>



                <Button android:id="@+id/build_index"
                        android:text="构建索引"
                        android:background="@color/colorAccent"
                        android:layout_margin="50px"
                        android:layout_width="250px"
                        android:layout_height="100px"/>

                <Button android:id="@+id/map_traj"
                        android:text="轨迹映射"
                        android:background="@color/colorAccent"
                        android:layout_margin="50px"
                        android:layout_width="250px"
                        android:layout_height="100px" />


                <Button android:id="@+id/delete_data"
                        android:text="删除数据"
                        android:background="@color/colorAccent"
                        android:layout_margin="50px"
                        android:layout_width="250px"
                        android:layout_height="100px"/>



        </LinearLayout>
</LinearLayout>